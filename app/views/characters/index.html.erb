<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Race</th>
      <th>Hp</th>
      <th>Physical attack</th>
      <th>Physical defense</th>
      <th>Physical critical chance</th>
      <th>Evasion</th>
      <th>Accuracy</th>
      <th>Hp recovery</th>
      <th>Chance block shield</th>
      <th>Cash</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.age %></td>
        <td><%= character.race %></td>
        <td><%= character.hp %></td>
        <td><%= character.physical_attack %></td>
        <td><%= character.physical_defense %></td>
        <td><%= character.physical_critical_chance %></td>
        <td><%= character.evasion %></td>
        <td><%= character.accuracy %></td>
        <td><%= character.hp_recovery %></td>
        <td><%= character.chance_block_shield %></td>
        <td><%= character.cash %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

